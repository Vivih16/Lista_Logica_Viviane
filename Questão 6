#include <iostream> 
#include <cmath>
using namespace std;
//----QUEST√ÉO 6----//

void questao6(float alt, char sexo){
  
  float peso_ideal;
  
  if(sexo == 'M'){
    peso_ideal = (62.1 * alt) - 44.7;
    cout << "Peso ideal:" << peso_ideal;
  }else{
    peso_ideal = (72.7 * alt) - 58;
    cout << "Peso ideal: " << peso_ideal;
  }
}

int main(){
  
  float alt;
  char sexo;

  cout << "informe seu sexo (M para mulher e H para homem):\n";
  cin >> sexo;
  cout << "digite sua altura:\n";
  cin >> alt;

  questao6(alt,sexo);
}
